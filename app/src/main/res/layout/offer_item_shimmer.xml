<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/product_imageView_shimmer"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:background="@drawable/bg_loader_bordered"
        android:viewportWidth="120"
        android:viewportHeight="80"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/product_brand_textView_shimmer"
        android:layout_width="100dp"
        android:layout_height="15dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/bg_loader_bordered"
        app:layout_constraintStart_toEndOf="@+id/product_imageView_shimmer"
        app:layout_constraintTop_toTopOf="@+id/product_imageView_shimmer" />

    <TextView
        android:id="@+id/product_title_textView_shimmer"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_loader_bordered"
        app:layout_constraintStart_toStartOf="@+id/product_brand_textView_shimmer"
        app:layout_constraintTop_toBottomOf="@+id/product_brand_textView_shimmer" />

    <View
        android:id="@+id/product_tag_textView_shimmer"
        android:layout_width="60dp"
        android:layout_height="15dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/bg_loader_bordered"
        app:layout_constraintStart_toStartOf="@+id/product_title_textView_shimmer"
        app:layout_constraintTop_toBottomOf="@+id/product_title_textView_shimmer" />

    <TextView
        android:id="@+id/likes_counter_textView_shimmer"
        android:layout_width="30dp"
        android:layout_height="15dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/bg_loader_bordered"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/product_brand_textView_shimmer" />


</androidx.constraintlayout.widget.ConstraintLayout>