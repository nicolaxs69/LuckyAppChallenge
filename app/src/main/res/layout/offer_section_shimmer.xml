<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/offers_counter_shimmer"
        android:layout_width="90dp"
        android:layout_height="15dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/bg_loader_bordered"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/section_title_textView"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:layout_marginTop="66dp"
        android:background="@drawable/bg_loader_bordered"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/offers_counter_shimmer"
        app:layout_constraintTop_toTopOf="@id/offers_counter_shimmer" />

    <include
        android:id="@+id/item_shimmer_1"
        layout="@layout/offer_item_shimmer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/section_title_textView"
        app:layout_constraintTop_toBottomOf="@+id/section_title_textView" />

    <include
        android:id="@+id/item_shimmer_2"
        layout="@layout/offer_item_shimmer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/item_shimmer_1"
        app:layout_constraintTop_toBottomOf="@+id/item_shimmer_1" />

    <include
        android:id="@+id/item_shimmer_3"
        layout="@layout/offer_item_shimmer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/item_shimmer_2"
        app:layout_constraintTop_toBottomOf="@+id/item_shimmer_2" />

    <include
        android:id="@+id/item_shimmer_4"
        layout="@layout/offer_item_shimmer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/item_shimmer_3"
        app:layout_constraintTop_toBottomOf="@+id/item_shimmer_3" />

    <View
        android:id="@+id/section_title2_textView"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_loader_bordered"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_shimmer_4"
        tools:text="Top Cashbacks" />

    <include
        android:id="@+id/item_shimmer_5"
        layout="@layout/offer_item_shimmer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/section_title2_textView"
        app:layout_constraintTop_toBottomOf="@+id/section_title2_textView" />

</androidx.constraintlayout.widget.ConstraintLayout>